{
  "name": "NHSBT Prototype Kit",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:22",
  "forwardPorts": [4000],
  "portsAttributes": {
    "4000": {
      "label": "Prototype Kit",
      "onAutoForward": "openPreview"
    }
  },
  "postCreateCommand": "npm install",
  "postStartCommand": "npm start",
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "editor.wordWrap": "on",
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
        "editor.detectIndentation": false,
        "[nunjucks]": {
          "editor.tabSize": 2
        },
        "[html]": {
          "editor.tabSize": 2
        },
        "[css]": {
          "editor.tabSize": 2
        },
        "[javascript]": {
          "editor.tabSize": 2
        },
        "emmet.includeLanguages": {
          "njk": "html",
          "nunjucks": "html",
          "erb": "html",
          "jinja": "html",
          "jinja-html": "html",
          "markdown": "html"
        },
        "files.associations": {
          "*.html": "nunjucks"
        },
        "html.suggest.html5": true
      },
      "extensions": [
        "github.copilot",
        "github.copilot-chat",
        "ginfuru.better-nunjucks",
        "sleistner.vscode-fileutils"
      ]
    }
  }
}
